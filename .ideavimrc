let mapleader = " "

set incsearch
set hlsearch
set ignorecase
set smartcase
" Uncomment to enable idea's join functionality.
" See https://github.com/JetBrains/ideavim/blob/master/doc/ideajoin-examples.md
" set ideajoin

map [[ <Action>(MethodUp)
map ]] <Action>(MethodDown)

map <leader>bb <Action>(Switcher)
map <leader>ff <Action>(GotoFile)
map <leader>ch <Action>(QuickJavaDoc)
map <leader>c? <Action>(ShowErrorDescription)
map <leader>gg <Action>(EditorSelectWord)<Action>(FindInPath)
map <leader>cr <Action>(RenameElement)
map <leader>cj gd
" map <leader>t <Action>(Refactorings.QuickListPopupAction)
map <leader>so <Action>(IdeaVim.ReloadVimRc.reload)
map <leader>rr <Action>(Run)
map <leader>rd <Action>(Debug)
map <leader>rc <Action>(ChooseRunConfiguration)
map <leader>cn <Action>(VcsShowNextChangeMarker)
map <leader>cp <Action>(VcsShowPrevChangeMarker)

packadd! matchit
Plug 'tpope/vim-surround'
Plug 'tpope/vim-commentary'
Plug 'michaeljsmith/vim-indent-object'
Plug 'kana/vim-textobj-entire'
